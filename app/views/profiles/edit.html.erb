<div class="profiles__edit_can">
  <div class="profiles___edit">

    <div class="user__image">
      <%= image_tag @profile %>
    </div>


    <div class="cover__content">


      <p class ="cover__name">
        <%= @profile.user.first_name %> <%= @profile.user.last_name %>
      </p>

    </div>

    <div class="user__info__left__background profile__edit"></div>

    <div class="user__info__left profile__edit">

      <%= form_for @profile do |f| %>



          <div class="edit__profile__fields">
            <%= f.label :birthday, "Birthday" %>
            <%= f.date_field :birthday, autocomplete: "off" %>
            <br/>

            <%= f.label :gender, "Gender" %>
            <%= f.text_field :gender, autocomplete: "off" %>
            <br/>

            <%= f.label :location, "City" %>
            <%= f.text_field :location %>
            <br/>

            <%= f.label :bio, "About Me" %>
            <%= f.text_field :bio %>
            <br/>
          </div>

            <%= f.submit "Save Your Profile", class: "profile__edit__submit__button" %>
            <br/>

      <% end %>

    </div>

  </div>
</div>
